p,
table,
li {
    font-family: "lucida calligraphy", arial, 'sans serif';
    margin-left: 10pt;
}

p {
    word-spacing: 5px;
}

body {
    background-color: rgb(196, 209, 197);
}

p,
li,
td {
    font-size: 75%;
}

td {
    padding: 0.5cm;
}

th {
    text-align: center;
    font-size: 85%;
}

h1,
h2,
h3,
hr {
    color: #220caf;
}

